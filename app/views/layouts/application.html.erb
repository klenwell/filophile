<!DOCTYPE html>
<html>
  <head>
    <title>Filophile</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%= link_to 'Filophile', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <% if current_user %>
              <li class="nav-item">
                <%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'New Upload', new_upload_path, class: 'nav-link' %>
              </li>
              <% if current_user.admin? %>
                <li class="nav-item">
                  <%= link_to 'Admin', admin_uploads_path, class: 'nav-link' %>
                </li>
              <% end %>
            <% end %>
          </ul>
          <ul class="navbar-nav ms-auto">
            <% if current_user %>
              <li class="nav-item">
                <span class="navbar-text me-3">
                  Logged in as <%= current_user.email %>
                </span>
              </li>
              <li class="nav-item">
                <%= button_to 'Logout', logout_path, method: :delete, class: 'btn btn-outline-light' %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <% flash.each do |type, msg| %>
        <div class="alert alert-<%= type == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
          <%= msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
