<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>My Uploads</h1>
  <%= link_to 'Upload New File', new_upload_path, class: 'btn btn-primary' %>
</div>

<% if @uploads.any? %>
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Filename</th>
        <th>Rows</th>
        <th>Columns</th>
        <th>Uploaded At</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @uploads.each do |upload| %>
        <tr>
          <td><%= link_to upload.filename, upload %></td>
          <td><%= upload.row_count %></td>
          <td><%= upload.column_count %></td>
          <td><%= time_ago_in_words(upload.uploaded_at) %> ago</td>
          <td>
            <%= link_to 'View', upload, class: 'btn btn-sm btn-info' %>
            <%= link_to 'Download', download_upload_path(upload), class: 'btn btn-sm btn-success' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">
    You haven't uploaded any files yet. <%= link_to 'Upload one now', new_upload_path, class: 'alert-link' %>.
  </div>
<% end %>
